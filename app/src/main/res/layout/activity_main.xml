<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margintop="28dp"
        android:gravity="center_horizontal"
        android:text="DICE ROLLING APP"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="27dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margintop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:layout_editor_absoluteX="-27dp" >

    <RadioButton
        android:id="@+id/side4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="side 4 dice"
        tools:ignore="InvalidId" />

    <RadioButton
        android:id="@+id/side6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 sided dice"/>

    <RadioButton
        android:id="@+id/side8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8 sided dice"></RadioButton>

    <RadioButton
        android:id="@+id/side10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 sided dice"></RadioButton>

    <RadioButton
        android:id="@+id/side12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 sided dice"></RadioButton>

    <RadioButton
        android:id="@+id/side20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 sided dice"></RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="32dp"
        android:text="One Time dice Roll"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"></Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="80dp"
        android:text="Second Time dice Roll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"></TextView>